@{
    ViewData["Title"] = "Twitter Ads API";
}
@using TwitterAdsAPIProject.Models

@model List<LineItem>

<h1>Line Items</h1>

<style>
    td {
        padding: 15px;
    }
</style>

<table>
    <thead>
        <tr>
            <th>No</th>
            <th>Id</th>
            <th>Name</th>
            <th>Username</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Username</td>
            </tr>
        }
    </tbody>
</table>
